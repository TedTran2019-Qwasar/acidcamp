<h2 class="text-center text-4xl">Edit <%= resource_name.to_s.humanize %></h2>
<div class="flex justify-center">
  <%= form_with(model: resource, url: registration_path(resource_name), method: :put, 
  data: {turbo: false}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <br /><i>(leave blank for no change)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password %><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions flex justify-center">
      <%= f.submit "Update", class: "btn btn-outline btn-accent glass" %>
    </div>
  <% end %>
</div>

<div class="text-center p-10">
  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, 
  class: "btn btn-outline btn-secondary glass" %></p>
  <%= link_to "Back", :back, class: "btn btn-outline btn-secondary glass" %>
</div>
